{
  "name": "@morning-story/monorepo",
  "version": "0.1.0",
  "description": "Morning Story - Intelligent standup speech generator",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev": "turbo dev",
