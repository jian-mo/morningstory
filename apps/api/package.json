    "openai": "^5.8.2",
    "passport-google-oauth20": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "babel-jest": "^30.0.4",
    "jest": "^29.7.0",
    "prisma": "^5.22.0",
